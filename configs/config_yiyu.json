{
    "workflow": {
        "interpreter": "/opt/conda/bin/python3",
        "mseed_path": "/tmp/data/data",
        "jobs_path": "jobs/",
        "picks_path": "data/picks/"  
    },
    "log": {
            "verbose": 0, 
            "appendlog": false,
            "logs_path": "logs/"
    },
    "model": {
        "picking":{
            "hourly_detection": false,
            "pretrained": "original",
            "max_gap": 20,
            "default_args": {
                "overlap": 5000, 
                "blinding": [1000, 1000]
            },
            "detection_args":{
                "P_threshold": 0.1,
                "S_threshold": 0.1
            }
        },
        "association":{
            "dims": ["x(km)", "y(km)", "z(km)"],
            "use_dbscan": false,
            "use_amplitude": false,
            "x(km)": [-3800, -3600],
            "y(km)": [17200, 17400],
            "z(km)": [-20, 20],
            "center": [-120, 47.5],
            "vel": {
                "p": 7.0,
                "s": 4.0
            },
            "method": "GMM",
            "min_picks_per_eq": 1,
            "max_sigma11": 2.0,
            "max_sigma22": 1.0,
            "max_sigma12": 1.0
        }
    },
    "environment": {
        "NPROC": 10,
        "CUDA_VISIBLE_DEVICES": [0,1],
        "OPENBLAS_NUM_THREADS": "1"
    }
}
